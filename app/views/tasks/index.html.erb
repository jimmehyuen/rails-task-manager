<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %> <br>
    <%= link_to "Delete task", destroy_task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task" } %></li>
  <% end %>
</ul>
<%= link_to "Create new task", tasks_new_path %>
